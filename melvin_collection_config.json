{
  "brain_settings": {
    "embedding_dim": 512,
    "memory_path": "melvin_global_memory",
    "enable_hebbian_learning": true,
    "hebbian_learning_rate": 0.01,
    "coactivation_window": 2.0
  },
  "collection_settings": {
    "output_dir": "melvin_datasets",
    "max_samples_per_dataset": 100,
    "enable_cross_modal_connections": true,
    "save_intermediate_results": true,
    "parallel_processing": false
  },
  "dataset_configs": [
    {
      "name": "squad",
      "source": "huggingface",
      "data_type": "text",
      "max_samples": 50,
      "enabled": true,
      "metadata": {
        "description": "Stanford Question Answering Dataset",
        "task": "reading_comprehension"
      }
    },
    {
      "name": "imdb",
      "source": "huggingface",
      "data_type": "text",
      "max_samples": 100,
      "enabled": true,
      "metadata": {
        "description": "Movie review sentiment analysis",
        "task": "sentiment_classification"
      }
    },
    {
      "name": "wikitext",
      "source": "huggingface",
      "data_type": "text",
      "max_samples": 30,
      "enabled": true,
      "metadata": {
        "description": "Wikipedia articles for language modeling",
        "task": "language_modeling"
      }
    },
    {
      "name": "code_examples",
      "source": "generated",
      "data_type": "code",
      "max_samples": 60,
      "enabled": true,
      "metadata": {
        "description": "Programming code examples across multiple languages",
        "languages": ["python", "javascript", "cpp"],
        "task": "code_understanding"
      }
    },
    {
      "name": "visual_features",
      "source": "generated",
      "data_type": "visual",
      "max_samples": 80,
      "enabled": true,
      "metadata": {
        "description": "Computer vision features and image analysis",
        "categories": ["person", "car", "dog", "cat", "tree", "house"],
        "task": "image_classification"
      }
    },
    {
      "name": "audio_features",
      "source": "generated",
      "data_type": "audio",
      "max_samples": 40,
      "enabled": true,
      "metadata": {
        "description": "Audio processing and speech recognition features",
        "types": ["speech", "music", "noise", "nature"],
        "task": "audio_classification"
      }
    }
  ],
  "advanced_settings": {
    "enable_cross_modal_learning": true,
    "hebbian_strengthening_threshold": 0.7,
    "connection_pruning_enabled": true,
    "connection_pruning_threshold": 0.05,
    "memory_consolidation_interval": 100,
    "background_processing_interval": 2.0
  }
}
